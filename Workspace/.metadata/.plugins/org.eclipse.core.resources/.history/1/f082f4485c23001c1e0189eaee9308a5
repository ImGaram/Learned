package conquest;

public class Q10 {
	public static void main(String[] args) {
		int sum = 0;	// total
		int s = 1;		// 부호 바꾸기
		int num = 0;
		
		while (sum<=100) {
			num++;	// 1 -> 3
			if (num%2==0) {
				num = num * -s;	// -2
			}
			sum+=num;	// 1-> -1
			System.out.println(sum);
			num = num * -s;	// 2
		}
		System.out.println(sum);
	}
}
